{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "jsx-a11y",
    "babel",
    "import"
  ],
  "extends":[
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "ecmaFeatures": {
    "modules": true,
    "jsx": true
  },
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "no-cond-assign": 2,
    "no-constant-condition": 2,
    "no-debugger": 2,
    "no-dupe-args": 2,
    "no-duplicate-case": 2,
    "no-empty": 2,
    "no-ex-assign": 2,
    "no-extra-boolean-cast": 2,
    "no-extra-semi": 1,
    "no-func-assign": 2,
    "no-inner-declarations": 2,
    "no-irregular-whitespace": 1,
    "no-obj-calls": 2,
    "no-sparse-arrays": 2,
    "no-template-curly-in-string": 2,
    "no-unexpected-multiline": 2,
    "no-unreachable": 2,
    "no-unsafe-finally": 2,
    "no-unsafe-negation": 2,
    "use-isnan": 2,
    "valid-typeof": 2,
    "block-scoped-var": 2,
    "default-case": 1,
    "dot-notation": 1,
    "eqeqeq": 2,
    "guard-for-in": 1,
    "no-alert": 2,
    "no-caller": 2,
    "no-case-declarations": 1,
    "no-else-return": 1,
    "no-empty-function": 1,
    "no-empty-pattern": 1,
    "no-eq-null": 1,
    "no-eval": 2,
    "no-extra-bind": 1,
    "no-extra-label": 1,
    "consistent-return": 2,
    "curly": 2,
    "no-fallthrough": 2,
    "no-floating-decimal": 2,
    "no-global-assign": 2,
    "no-implicit-coercion": 1,
    "no-implicit-globals": 1,
    "no-implied-eval": 1,
    "no-iterator": 2,
    "no-labels": 1,
    "no-lone-blocks": 1,
    "no-loop-func": 2,
    /*"no-magic-numbers": [ // Reinstate this rule after the styles have been moved into seperate files
      2,
      { 
        "ignoreArrayIndexes": true,
        "ignore": [-1, 0, 1, 2] 
        }
    ],*/
    "no-multi-spaces": 1,
    "no-multi-str": 1,
    "no-new-func": 2,
    "no-new-wrappers": 1,
    "no-new": 2,
    "no-octal-escape": 2,
    "no-octal": 2,
    "no-param-reassign": 2,
    "no-proto": 2,
    "no-redeclare": 2,
    "no-return-assign": 2,
    "no-return-await": 2,
    "no-script-url": 2,
    "no-self-assign": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-unmodified-loop-condition": 1,
    "no-unused-labels": 2,
    "no-useless-concat": 1,
    "no-useless-escape": 1,
    "no-useless-return": 1,
    "no-restricted-globals": 1,
    "no-shadow-restricted-names": 2,
    "no-shadow": 2,
    "no-undef-init": 2,
    "no-undef": 1,
    "no-unused-vars": 1,
    "no-use-before-define": 1,
    "no-with": 1,
    "no-label-var": 1,
    "require-await": 2,
    "vars-on-top": 1,
    "yoda": 1,
    "array-bracket-spacing": 1,
    "block-spacing": 1,
    "brace-style": 1,
    "comma-spacing": 1,
    "comma-style": 1,
    "computed-property-spacing": 1,
    "eol-last": 1,
    "func-call-spacing": 1,
    "func-name-matching": 2,
    "jsx-quotes": [
      1,
      "prefer-double"
    ],
    "key-spacing": 2,
    "keyword-spacing": 1,
    "linebreak-style": 1,
    "lines-around-directive": 1,
    "max-depth": [
      1,
      { "max": 7 }
    ],
    "max-nested-callbacks": 1,
    "max-statements-per-line": 1,
    "new-parens": 2,
    "newline-per-chained-call": [1],
    "no-array-constructor": 2,
    // "no-bitwise": 1, Reinstate this rule if we ever move from the enum / bitwise fields
    "no-continue": 2,
    "no-lonely-if": 2,
    "no-mixed-operators": 2,
    "no-mixed-spaces-and-tabs": 1,
    "no-multiple-empty-lines": 1,
    "no-negated-condition": 2,
    "no-nested-ternary": 1,
    "no-new-object": 1,
    "no-trailing-spaces": 1,
    "no-unneeded-ternary": 2,
    "no-whitespace-before-property": 2,
    "one-var-declaration-per-line": 1,
    "operator-assignment": 1,
    "quote-props":[
      2,
      "as-needed"
    ],
    "quotes": 1,
    "space-in-parens": 1,
    "semi-spacing": [
      2,
      {
        "before": false,
        "after": true
      }
    ],
    "space-infix-ops": 1,
    "spaced-comment": [
      2,
      "always"
    ],
    "arrow-spacing": 1,
    "constructor-super": 1,
    "no-confusing-arrow": 1,
    "no-const-assign": 2,
    "no-dupe-class-members": 2,
    "no-duplicate-imports": 2,
    "no-new-symbol": 2,
    "no-this-before-super": 2,
    "no-useless-constructor": 1,
    "no-useless-rename": 1,
    "prefer-arrow-callback": 1,
    "no-var": 1,
    "prefer-const": 1,
    "prefer-numeric-literals": 1,
    "space-before-blocks": 1,
    "arrow-parens": [
      2,
      "always"
    ],
    "comma-dangle": [
      1,
      "always-multiline"
    ],
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "jsx-a11y/aria-props": 2,
    "jsx-a11y/href-no-hash": 2,
    "jsx-a11y/label-has-for": 2,
    "jsx-a11y/mouse-events-have-key-events": 2,
    "jsx-a11y/role-has-required-aria-props": 2,
    "jsx-a11y/role-supports-aria-props": 2,
    "no-console": 2,
    "prefer-template": 2,
    "react/jsx-first-prop-new-line": [
      2,
      "multiline"
    ],
    "react/jsx-uses-vars": 1,
    "react/jsx-uses-react": 1,
    "babel/no-invalid-this": 1,
    "babel/object-curly-spacing":[
      1,
      "always"
    ],
    "babel/new-cap": 1,
    "babel/semi": 2,
    "import/no-named-as-default": 0
  }
}
